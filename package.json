{
    "name": "select-connected-comments",
    "displayName": "Select Connected Comments",
    "description": "Select contiguous comments until you reach an empty line",
    "version": "0.1",
    "publisher": "e0289033",
    "engines": {
        "vscode": "^1.15.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:select-comments.selectComments"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "select-comments.selectComments",
                "title": "Select Comments"
            }
        ],
        "keybindings": [
            {
                "command": "select-comments.selectComments",
                "key": "ctrl+p",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.2",
        "vscode": "^1.1.37",
        "mocha": "^10.1.0",
        "eslint": "^4.6.1",
        "@types/node": "^8.0.26",
        "@types/mocha": "^2.2.42"
    },
    "repository": {
      "type": "git",
      "url": "https://github.com/e0289033/vscode-select-comments"
    },
    "extensionKind": "ui"
}
